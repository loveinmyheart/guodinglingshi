<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/single_first_item_iv"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:background="@color/colorMult" />

        <TextView
            android:id="@+id/single_first_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是标题区域"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/single_first_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="5dp"
        android:lines="2"
        android:ellipsize="end"
        android:text="这是内容区域"
        android:textSize="10sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="#44323232"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <TextView
            android:id="@+id/rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RMB"
            android:textColor="@color/colorMult"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="10sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/single_first_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="278.00"
            android:textColor="@color/colorMult"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/rmb"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/rmb" />

        <TextView
            android:id="@+id/single_first_item_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ico_like"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textSize="10sp"
            android:text=" 586" />
    </RelativeLayout>
</LinearLayout>